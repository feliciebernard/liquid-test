<!doctype html>
<html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.js' | asset_url | script_tag }}
  <link rel="stylesheet" href="{{ 'tailwind.css' | asset_url }}">
</head>
<body>

<div class="top-0 py-1 lg:py-2 w-full bg-transparent lg:relative z-50 dark:bg-gray-900">
  <nav class="z-10 sticky top-0 left-0 right-0 max-w-4xl xl:max-w-5xl mx-auto px-5 py-2.5 lg:border-none lg:py-4">
    <div class="flex items-center justify-around">
      <button>
        <div class="flex items-center space-x-2">
          {% assign first_link = linklists.main-menu.links.first %}
          <h2 class="text-black dark:text-white font-bold text-2xl">
   
            {% assign first_child_list_handle = first_link.title | handleize %}
            {% if linklists[first_child_list_handle].links != blank %}
              {{ linklists[first_child_list_handle].links.first.title }}
            {% else %}
            <a href="{{ first_link.url }}">{{ first_link.title }}</a>
            {% endif %}
          </h2>
        </div>
      </button>
      <div class="hidden lg:block">
        <ul class="flex space-x-10 text-base font-bold text-black/60 dark:text-white">
          {% for link in linklists.main-menu.links offset:1 %}
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
              <li class="hover:underline hover:underline-offset-4 hover:w-fit transition-all duration-100 ease-linear relative">
                <a href="{{ link.url }}">{{ link.title }}</a>
                <ul class="absolute left-0 mt-2 bg-white dark:bg-gray-800 shadow-lg rounded-md hidden group-hover:block">
                  {% for childlink in linklists[child_list_handle].links %}
                    <li class="px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700">
                      <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </li>
            {% else %}
              <li class="hover:underline hover:underline-offset-4 hover:w-fit transition-all duration-100 ease-linear">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="hidden lg:flex lg:items-center gap-x-2">
        <a href="/cart" class="flex items-center text-black dark:text-white justify-center px-6 py-2.5 font-semibold">Cart</a>

        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a href="/account" class="flex items-center text-black dark:text-white justify-center px-6 py-2.5 font-semibold">Account</a>
            <div class="flex items-center text-black dark:text-white justify-center px-6 py-2.5 font-semibold">{{ 'Log out'  | customer_logout_link }}</div>
          {% else %}
            <div class="flex items-center text-black dark:text-white justify-center px-6 py-2.5 font-semibold">{{ 'Register' | customer_register_link }}</div>
            <div class="flex items-center justify-center rounded-md bg-[#4A3BFF] text-white px-6 py-2.5 font-semibold hover:shadow-lg hover:drop-shadow transition duration-200">{{ 'Log in ' | customer_login_link }}</div>
          {% endif %}
        {% endif %}
      </div>
      <div class="flex items-center justify-center lg:hidden">
        <button class="focus:outline-none text-slate-200 dark:text-white">
          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 20 20" aria-hidden="true" class="text-2xl text-slate-800 dark:text-white focus:outline-none active:scale-110 active:text-red-500" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</div>


  <main role="main">
    {{ content_for_layout }}
  </main>
</body>
</html>