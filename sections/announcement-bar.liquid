{% if section.settings['show-announcement'] %}
    <section>
        <div class='announcement-bar flex justify-center items-center'>
            <ul class='announcement-bar flex items-center'>
                {% if section.blocks.size == 0 %}
                    <li>La nature vous veut du bien</li>
                {% else %}
                    {% for block in section.blocks %}
                        <li>
                            <a href='{{ block.settings.link }}'>{{ block.settings.text }}</a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </section>
{% endif %}

<style>
    .announcement-bar {
      background: {{ section.settings.background }};
      color: {{ section.settings.text_color }};
    }
</style>

{% schema %}
{
    "name": "Announcement bar",
    "settings": [
        {
            "type": "checkbox",
            "id": "show-announcement",
            "label": "Show Annoucement",
            "default": true
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "pick image",
            "info": "png recommanded"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "pick image",
            "info": "png recommanded"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "name": "Links",
            "type": "links",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "Link"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "announcement-bar"
        }
    ]
}
{% endschema %}
